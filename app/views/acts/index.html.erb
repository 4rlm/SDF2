<p id="notice"><%= notice %></p>

<h1>Acts</h1>

<table class="table table-bordered table-hover table-striped text-nowrap">
  <thead>
    <tr>
      <th>Source</th>
      <th>sts</th>
      <th>Crm act num</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @acts.each do |act| %>
      <tr>
        <td><%= act.src %></td>
        <td><%= act.sts %></td>
        <td><%= act.crm_act_num %></td>
        <td><%= act.name %></td>
        <td><%= link_to 'Show', act %></td>
        <td><%= link_to 'Edit', edit_act_path(act) %></td>
        <td><%= link_to 'Destroy', act, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

