<p id="notice"><%= notice %></p>

<br>
<h1>Rooftops</h1>
<h3><%= @acts.count %></h3>
<br>


<%= search_form_for @query do |f| %>
  <%= f.label :act_name_cont %>
  <%= f.search_field :act_name_cont %>
  <%= f.submit %>
<% end %>

<br>

<table id="acts" class="display table table-bordered table-hover table-striped text-nowrap">
  <thead>
    <tr>
      <th><%= sortable("act_name", "RT Name") %></th>
      <th><%= sortable("act_gp_date", "RT Scrape Date") %></th>
    </tr>
  </thead>

  <tbody>
    <% @acts.each do |act| %>
      <tr>
        <td><%= link_to act.act_name, act %></td>
        <td><%= act.act_gp_date&.strftime('%x') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%#= will_paginate @acts %>
<br>
