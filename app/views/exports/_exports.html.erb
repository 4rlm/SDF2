
<div class="row">

  <div class="media">
    <div class="media-left">
      <%#= link_to image_tag(export.image.url(:thumb), class: 'media-object'), export.image.url, target: '_blank' %>

      <table class="table">
        <thead>
          <tr>
            <th>File Name</th>
            <th>Type</th>
            <th>Size</th>
            <th>Updated</th>
          </tr>
        </thead>

        <tbody>

          <% if @exports %>
            <% @exports.each do |export| %>
              <div class="col-md-2">

                <tr>
                  <td><%= export.csv_file_name %></td>
                  <td><%= export.csv_content_type %></td>
                  <td><%= export.csv_file_size %></td>
                  <td><%= export.csv_updated_at %></td>

                  <td>
                    <% msg = 'Do you wish to download this CSV?' %>
                    <%= link_to download_csv_exports_path(id: export.id), remote: false, data: { confirm: msg }, class: 'btn btn-primary btn-md' do %>
                      <i class="fa fa-download"></i> Generate CSV
                    <% end %>
                  </td>

                </tr>

              </div>
            <% end %>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>

</div>
