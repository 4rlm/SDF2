<!-- User Profile -->
<div class="panel">
  <h6>User Profile</h6>
  <div class="row">
    <table class="table">
      <thead class="thead-inverse">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Role</th>
          <th>Registered</th>
          <th>Updated</th>
        </tr>
      </thead>

      <tr>
        <td><%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></td>
        <td><%= @user.email %></td>
        <td><%= @user.phone %></td>
        <td><%= @user.role.capitalize %></td>
        <td><%= @user.created_at.strftime('%x') %></td>
        <td><%= @user.updated_at.strftime('%x') %></td>
      </tr>
    </table>
  </div>
</div>
