<tr>
  <td>Accounts</td>
  <td><%= link_to number_with_delimiter(current_user.act_activities.followed.count, :delimiter => ','), acts_path(grab_followed: 'grab_followed'), class: 'btn btn-primary btn-sm' %></td>

  <td><%= link_to "Reset", unfollow_all_act_activities_path, class: 'btn btn-default btn-sm' %></td>

