<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Role</th>
      <th>Approved</th>
      <th>Registered</th>
      <th>Updated</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to "#{user&.first_name} #{user&.last_name}", user %></td>
        <td><%= user&.email %></td>
        <td><%= user&.phone %></td>
        <td><%= user&.role %></td>
        <td><%= user.created_at&.strftime('%x') %></td>
        <td><%= user.updated_at&.strftime('%x') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<br>
<%= will_paginate @users if @users.present? %>
